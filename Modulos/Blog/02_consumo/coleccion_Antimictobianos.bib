isbn = {0960-1643},
issn = {09601643},
journal = {British Journal of General Practice},
keywords = {Antibiotics,Prescriptions,Primary care},
number = {567},
pages = {724--727},
pmid = {19843411},
title = {{Which practices are high antibiotic prescribers? A cross-sectional analysis}},
